  <script>
    const urls = [
      "https://marketplace.canva.com/EAFnMaExwbk/2/0/1236w/canva-curr%C3%ADculum-vitae-cv-de-administraci%C3%B3n-simple-azul-aFz_YeZHLfQ.jpg",
      "https://marketplace.canva.com/EAFWS3n4loo/2/0/1236w/canva-curr%C3%ADculum-vitae-cv-de-contabilidad-minimalista-azul-Gni58z0ZjqI.jpg",
      "https://marketplace.canva.com/EAGJy5iKxmI/1/0/1131w/canva-curr%C3%ADculum-vitae-asesor-financiero-profesional-corporativo-azul-y-gris-gV71mJsOR0U.jpg",
      "https://marketplace.canva.com/EAFhUypjiKg/2/0/1131w/canva-curr%C3%ADculum-vitae-cv-dise%C3%B1adora-y-arquitecta-minimalista-rosa-Y839yD8aTTc.jpg",
      "https://marketplace.canva.com/EAFHud6Zi8g/1/0/1131w/canva-curriculum-vitae-cv-profesional-con-foto-azul-y-blanco-A1ibCKjvR2I.jpg",
      "https://marketplace.canva.com/EAFAV5wm11Q/1/0/1131w/canva-curriculum-vitae-cv-trabajo-ZrzlglHk_l4.jpg",
      "https://marketplace.canva.com/EAE_JQ0j_RY/3/0/1131w/canva-curriculum-vitae-profesional-mujer-con-iconos-moderno-beige-y-blanco-Sz-Tb0O8GXU.jpg"
    ];

    const galeria = document.getElementById("galeriaModelos");
    urls.forEach((url, index) => {
      const div = document.createElement("div");
      div.className = "modelo";
      div.innerHTML = `<img src="${url}" alt="Modelo ${index + 1}" data-url="${url}"/>`;
      div.onclick = () => {
        document.querySelectorAll(".modelo").forEach(m => m.classList.remove("seleccionado"));
        div.classList.add("seleccionado");
        document.getElementById("modeloElegido").value = url;
      };
      galeria.appendChild(div);
    });

    // Función para navegar por las flechas
    document.getElementById("flechaIzquierda").onclick = () => {
      galeria.scrollLeft -= 200;
    };
    document.getElementById("flechaDerecha").onclick = () => {
      galeria.scrollLeft += 200;
    };

    function agregarCurso() {
      const div = document.createElement("div");
      div.className = "curso";
      div.innerHTML = `
        <input type="text" name="curso_nombre[]" placeholder="Curso realizado" />
        <input type="text" name="curso_localidad[]" placeholder="Localidad" />
        <input type="text" name="curso_inicio[]" placeholder="Mes y año de ingreso" />
        <input type="text" name="curso_egreso[]" placeholder="Mes y año de egreso" />
        <input type="text" name="curso_titulo[]" placeholder="Título recibido" />
      `;
      document.getElementById("cursos").appendChild(div);
    }

    function agregarUni() {
      const div = document.createElement("div");
      div.className = "uni";
      div.innerHTML = `
        <input type="text" name="uni_nombre[]" placeholder="Nombre de la carrera" />
        <input type="text" name="uni_inicio[]" placeholder="Año de ingreso" />
        <input type="text" name="uni_egreso[]" placeholder="Año de egreso" />
        <input type="text" name="uni_titulo[]" placeholder="Título obtenido" />
      `;
      document.getElementById("universidades").appendChild(div);
    }

    function agregarIdioma() {
      const div = document.createElement("div");
      div.className = "idioma";
      div.innerHTML = `
        <input type="text" name="idioma_nombre[]" placeholder="Idioma" />
        <input type="text" name="idioma_nivel[]" placeholder="Nivel (básico, intermedio, avanzado)" />
      `;
      document.getElementById("idiomas").appendChild(div);
    }

    function agregarExp() {
      const div = document.createElement("div");
      div.className = "exp";
      div.innerHTML = `
        <input type="text" name="exp_empresa[]" placeholder="Nombre de la empresa" />
        <input type="text" name="exp_puesto[]" placeholder="Puesto" />
        <textarea name="exp_tareas[]" placeholder="Tareas realizadas en el sector"></textarea>
        <input type="text" name="exp_inicio[]" placeholder="Año de ingreso" />
        <input type="text" name="exp_egreso[]" placeholder="Año de egreso" />
      `;
      document.getElementById("experiencias").appendChild(div);
    }

    function enviarWhatsApp() {
      const f = document.getElementById("formulario");
      const datos = new FormData(f);
      let mensaje = "Hola! Quiero generar mi currículum:\n";
      for (const [key, value] of datos.entries()) {
        if (value && !key.includes("foto")) {
          mensaje += `• ${key.replace(/_/g, " ")}: ${value}\n`;
        }
      }
      const modelo = document.getElementById("modeloElegido").value;
      if (modelo) {
        mensaje += `\nModelo elegido: ${modelo}`;
      }
      mensaje += "\n\nPrecio: $4000";
      const url = `https://wa.me/5491168247936?text=${encodeURIComponent(mensaje)}`;
      window.open(url, "_blank");
    }
  </script>
